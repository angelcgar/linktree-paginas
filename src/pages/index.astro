---
// import Welcome from "../components/Welcome.astro";
import Columna from "../components/Columna.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";

import LinkSocial from "../components/LinkSocial.astro";
import SubTitulo from "../components/SubTitulo.astro";
import ContainerGrid from "../components/ContainerGrid.astro";
import Separator from "../components/Separator.astro";
import ColumnaTitle from "../components/ColumnaTitle.astro";

import DataJson from "../assets/json/Links.json";
---

<Layout>
	<div class="container">
		<Hero />
		<SubTitulo text={DataJson.primer.title_section} />

		<ContainerGrid>
			<Columna>
				<ColumnaTitle text={DataJson.primer.subtitle_category_first} />
			</Columna>
			<Columna>
				<ColumnaTitle text={DataJson.primer.subtitle_category_two} />
			</Columna>
			<Columna>
				<ColumnaTitle text={DataJson.primer.subtitle_category_three} />
			</Columna>

			{
				DataJson.primer.links.map((param) => (
					<Columna>
						<LinkSocial
							hrefLink={param.href}
							imgSrc={param.img.src}
							imgAlt={param.img.alt}
							spanText={param.span}
						/>
					</Columna>
				))
			}
		</ContainerGrid>

		<Separator />

		<!-- Segunda secciÃ³n -->
		<SubTitulo text={DataJson.segundo.title} />

		<ContainerGrid>
			<Columna><ColumnaTitle text={DataJson.segundo.subtitle1} /></Columna>
			<Columna><ColumnaTitle text={DataJson.segundo.subtitle2} /></Columna>
			<Columna><ColumnaTitle text={DataJson.segundo.subtitle3} /></Columna>

			{
				DataJson.segundo.links.map((param) => (
					<Columna>
						<LinkSocial
							hrefLink={param.href}
							imgSrc={param.img.src}
							imgAlt={param.img.alt}
							spanText={param.span}
						/>
					</Columna>
				))
			}
		</ContainerGrid>
		<Footer />
	</div>
</Layout>

<style>
	.container {
		width: 90%;
		max-width: 1200px;
		margin: 40px auto;
		text-align: center;
	}
</style>
