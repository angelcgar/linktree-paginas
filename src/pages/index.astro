---
// import Welcome from "../components/Welcome.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";

import SubTitulo from "../components/SubTitulo.astro";
import ContainerGrid from "../components/ContainerGrid.astro";
import Separator from "../components/Separator.astro";

import { searchLinks } from "../services/links";
import ContainerMain from "../components/ContainerMain.astro";

const links = await searchLinks();
---

<Layout>
	<ContainerMain>
		<Hero />

		<SubTitulo text={links[0].title_section} />
		<ContainerGrid links={links[0].links} />
		<Separator />

		<SubTitulo text={links[1].title_section} />
		<ContainerGrid links={links[1].links} />
		<Separator />

		<SubTitulo text={links[2].title_section} />
		<ContainerGrid links={links[2].links} />
		<Separator />

		<SubTitulo text={links[3].title_section} />
		<ContainerGrid links={links[3].links} />
		<Separator />
	</ContainerMain>
	<Footer />
</Layout>
