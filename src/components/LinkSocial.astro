---
const { hrefLink, imgSrc, imgAlt, spanText } = Astro.props;
---

<a
  href={hrefLink}
  class="link-item"
  target="_blank"
  style="animation-delay: 0.1s;"
>
  <img src={imgSrc} alt={imgAlt} class="link-icon" />
  <span class="link-text text-balance">{spanText}</span>
</a>

<style>
  .link-item {
    background: white;
    margin-bottom: 10px;
    padding: 12px 15px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #2c3e50;
    height: 100%;

    animation: fadeIn 0.5s ease forwards;
    opacity: 0;
  }

  .link-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    background: #f8f9fa;
  }

  .link-icon {
    width: 30px;
    height: 30px;
    margin-right: 10px;
    object-fit: contain;
  }

  .link-text {
    flex-grow: 1;
    text-align: left;
    font-weight: 500;
  }

  /* Efecto de carga */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
